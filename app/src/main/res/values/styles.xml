<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--tool bar-->
    <style name="tool_bar_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <!--edit text 底部线条 没用-->
    <style name="EditTextBottomLine" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/edit_bottom_line</item>
        <item name="colorControlActivated">@color/edit_bottom_line</item>
    </style>
    <!--index 底部栏-->
    <style name="IndexBottomBar">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item><!--去除RadioButton默认带的圆点-->
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--index  linearLayout text view style-->
    <style name="indexFragmentGridView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#817b7b</item>
    </style>
    <!--index linearLayout type -->
    <style name="linearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="personal_tailor">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#817b7b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="fen_ge_xian_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ededed</item>
    </style>
    <style name="fen_ge_xian_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EDEDED</item>
    </style>
    <!--NestedScrollView style-->
    <style name="nestedScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>
    <!--LinearLayout vertical-->
    <style name="linearLayout_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--LinearLayout horizontal-->
    <style name="linearLayout_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--UNITY TEXT -->
    <style name="unity_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_bg</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#6F6F6F</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--main  line-->
    <style name="main_line">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="main_gride">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_columnWeight" tools:ignore="NewApi">1</item>
    </style>
    <style name="maingride">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="maintitle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--产品查询 rediogroup rediobutton style-->
    <style name="ps_rb">
        <item name="android:background">@drawable/ps_rb_status_bg</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ps_shaixuan_rt">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ps_search_shaixuan_status</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#6F6F6F</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ps_shaixuan_checkbox">
        <item name="android:layout_columnWeight" tools:targetApi="lollipop">1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ps_search_shaixuan_status_checkedbox</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#6F6F6F</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
